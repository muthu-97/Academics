<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <Button
        android:id="@+id/ccreate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ccode"
        android:layout_alignTop="@+id/croom"
        android:background="#3f51b5"
        android:text="create"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/cname"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Course Name"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/cslot"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cname"
        android:layout_below="@+id/cname"
        android:layout_marginStart="22dp"
        android:layout_marginTop="46dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Slot"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/croom"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cslot"
        android:layout_below="@+id/cslot"
        android:layout_marginTop="37dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Class room"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/ccode"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cslot"
        android:layout_alignBottom="@+id/cslot"
        android:layout_alignEnd="@+id/cname"
        android:layout_marginEnd="13dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="course code"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="39dp"
        android:text="Create a new course and leave your tensions to us!"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:text="Hello"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible" />
</RelativeLayout>